import type { IFrontmatter } from "@/astro-boilerplate-components/index";
import { Hero } from "@/components/Hero";
// import { ProjectList } from "@/components/ProjectList";
import { AllPosts } from "@/components/AllPosts";
import Base from "@/templates/Base.astro";
import { AppConfig } from "@/utils/AppConfig";
import { sortByDate } from "@/utils/Posts";

const posts = await Astro.glob<IFrontmatter>("./projects/*.md");

// const allProjects = await Astro.glob<IFrontmatterProject>("./projects/*.md");
const sortedPosts = sortByDate(posts);
// const lastThreePosts = sortedPosts.slice(0, 3);
const { title } = AppConfig;
const { description } = AppConfig;
---

<Base head={{ title, description }}>
  <Hero />
  <!-- <ProjectList projectList={allProjects} /> -->
  <AllPosts postList={sortedPosts} />
</Base>
