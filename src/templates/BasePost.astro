---
import type { IFrontmatterProject } from "@/astro-boilerplate-components/index";

import { BlogPost } from "@/partials/BlogPost";
import Base from "@/templates/Base.astro";
import { AppConfig } from "@/utils/AppConfig";

export interface Props {
  content: IFrontmatterProject;
}

// const { content } = Astro.props as Props;
const content = Astro.props as Props;
const title = `${content.content.title} - ${AppConfig.site_name}`;
---

<Base head={{ title, description: content.content.description }}>
  <BlogPost frontmatter={content.content}>
    <slot />
  </BlogPost>
</Base>
